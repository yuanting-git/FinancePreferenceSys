@page
@model FinancePreferenceSys.Pages.LikeListPage.IndexModel
@{
    ViewData["Title"] = "喜好金融商品清單";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>喜好清單</h2>
    <a class="btn btn-primary" asp-page="Create">新增</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>名稱</th>
            <th>數量</th>
            <th>扣款帳號</th>
            <th>預計扣款總金額</th>
            <th>手續費用</th>
            <th>使用者電子信箱</th>
            <th>動作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LikeLists)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.OrderNum</td>
                <td>@item.Account</td>
                <td>@item.TotalAmount.ToString("N0")</td>
                <td>@item.TotalFee.ToString("N0")</td>
                <td>@item.UserEmail</td>
                <td>
                    <a class="btn btn-sm btn-info me-1" asp-page="Edit" asp-route-sn="@item.SN">編輯</a>
                    <a class="btn btn-sm btn-danger" asp-page="Delete" asp-route-sn="@item.SN">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
