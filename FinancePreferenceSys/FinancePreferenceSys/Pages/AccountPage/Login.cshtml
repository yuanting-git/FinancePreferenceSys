@page
@model FinancePreferenceSys.Pages.AccountPage.LoginModel
@{
    ViewData["Title"] = "登入";
}

<div class="container mt-4">
    <h2>登入</h2>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label for="Input_Email" class="form-label">電子郵件</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="Input_Password" class="form-label">密碼</label>
            <input asp-for="Input.Password" class="form-control" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">登入</button>
        <a asp-page="/Index" class="btn btn-secondary">取消</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}