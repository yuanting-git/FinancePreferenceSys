@page
@model FinancePreferenceSys.Pages.ProductPage.DeleteModel

<div class="container">
    <h2>刪除金融商品</h2>
    <h5 class="text-danger">你確定要刪除這項金融商品嗎？</h5>

    <div class="mb-3"><strong>商品名稱：</strong> @Model.Product.ProductName</div>
    <div class="mb-3"><strong>價格：</strong> @Model.Product.Price.ToString("#,##0")</div>
    <div class="mb-3"><strong>手續費率：</strong> @(Model.Product.FeeRate.ToString("0.##"))%</div>

    <form method="post">
        <input type="hidden" asp-for="Product.No" />
        <button type="submit" class="btn btn-danger">確認刪除</button>
        <a asp-page="./Index" class="btn btn-secondary">取消</a>
    </form>
</div>
